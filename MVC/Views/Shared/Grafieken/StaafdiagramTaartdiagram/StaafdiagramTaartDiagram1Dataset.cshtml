<div id="div-@ViewBag.GrafiekId" class="col-md-5 col-lg-5">
    <canvas id="@ViewBag.GrafiekId" height="300"></canvas>

    <button id="bewerken-@ViewBag.GrafiekId" class="btn btn-primary" onclick="grafiekBewerken(this.id)">
        <span class="glyphicon glyphicon-pencil"></span>
    </button>

    <button id="verwijderen-@ViewBag.GrafiekId" class="btn btn-primary" onclick="grafiekVerwijderen(this.id)">
        <span class="glyphicon glyphicon-remove"></span>
    </button>
</div>


<script>

    var grafiekId = @Html.Raw(Json.Encode(ViewBag.GrafiekId))
    var grafiekTitel = @Html.Raw(Json.Encode(ViewBag.Grafiektitel));
    var xLabels = @Html.Raw(Json.Encode(ViewBag.XLabels));
    var data = @Html.Raw(Json.Encode(ViewBag.Data));

    var toonLegende = @Html.Raw(Json.Encode(ViewBag.ToonLegende));

   var grafiektype = @Html.Raw(Json.Encode(ViewBag.Grafiektype));
    var toonXAs = @Html.Raw(Json.Encode(ViewBag.ToonXAs));
    var toonYAs = @Html.Raw(Json.Encode(ViewBag.ToonYAs));



    GrafiekOpbouwen(grafiekId, grafiekTitel, grafiektype, toonLegende, true, true, toonXAs, toonYAs, false, false, 90, 90, "Items", "Waarden", xLabels,
        null, null, null, null, null, data, null, null, null, null, ["#3e95cd", "#8e5ea2", "#3cba9f", "#ff8000", "#c45850"], null, null, null, null,
        ["#3e95cd", "#8e5ea2", "#3cba9f", "#ff8000", "#c45850"], null, null, null, null)


</script>





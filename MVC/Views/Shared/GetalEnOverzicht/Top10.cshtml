<div class=col-md-6 id="top10Id">
    <h3 class="statistieken-opmaak-titel">Top 10</h3>

    <ol class="statistieken-opmaak-inhoud">

        @for (int i = 0; i < ViewBag.ItemsNamen.Count; i++)
        {
            <li>@ViewBag.ItemsNamen[i] - @ViewBag.ItemsWaarden[i]</li>
        }


    </ol>

    <button id="verwijderen-top10Id" class="btn btn-primary" onclick="top10Verwijderen()">
        <span class="glyphicon glyphicon-remove"></span>
    </button>

</div>

<script>
    function top10Verwijderen() {

        var top10verwijderen = confirm("Ben je zeker dat je deze statistiek wilt verwijderen?");
        if (top10verwijderen === true) {
            $("#top10Id").remove()
            $("#verwijderen-top10Id").remove();

        }
    }
</script>







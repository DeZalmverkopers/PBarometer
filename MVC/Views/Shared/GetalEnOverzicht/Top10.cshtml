<div class=col-md-6 id="@ViewBag.StatistiekId">
    <h3 class="statistieken-opmaak-titel">Top 10 - aantal tweets</h3>

    <ol class="statistieken-opmaak-inhoud">

        @for (int i = 0; i < ViewBag.ItemsNamen.Count; i++)
        {
        <li>@ViewBag.ItemsNamen[i] - @ViewBag.ItemsWaarden[i] - @ViewBag.ItemsTrend[i]</li>
        }


    </ol>

    @if (Request.IsAuthenticated)

    {
        <button id="verwijderen-@ViewBag.StatistiekId" title="Statistiek verwijderen" class="btn btn-primary" onclick="statistiekVerwijderen(this.id)">
            <span class="glyphicon glyphicon-remove"></span>
        </button>

    }

</div>

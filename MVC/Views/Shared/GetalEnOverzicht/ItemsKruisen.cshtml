<div class=col-md-6 id="@ViewBag.StatistiekId">
    <h3 class="statistieken-opmaak-titel">
        Kruising: @ViewBag.ItemNaam1 &amp; @ViewBag.ItemNaam2
    </h3>


    <div>
        <div class="statistieken-opmaak-inhoud">
            Aantal gemeenschappelijke tweets: @ViewBag.GekruistItemAantal
        </div>
    </div>

    @if (Request.IsAuthenticated)

    {
        <button id="verwijderen-@ViewBag.StatistiekId" title="Statistiek verwijderen" class="btn btn-primary" onclick="statistiekVerwijderen(this.id)">
            <span class="glyphicon glyphicon-remove"></span>
        </button>

    }


</div>




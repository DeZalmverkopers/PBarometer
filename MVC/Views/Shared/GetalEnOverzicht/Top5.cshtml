<div class=col-md-6 id="top5Id">
    <h3 class="statistieken-opmaak-titel">Top 5</h3>

    <ol class="statistieken-opmaak-inhoud">

        @for (int i = 0; i < ViewBag.ItemsNamen.Count; i++)
        {
            <li>@ViewBag.ItemsNamen[i] - @ViewBag.ItemsWaarden[i]</li>
        }


    </ol>

    <button id="verwijderen-top5Id" class="btn btn-primary" onclick="top5Verwijderen()">
        <span class="glyphicon glyphicon-remove"></span>
    </button>

</div>


<script>
    function top5Verwijderen() {

        var top5verwijderen = confirm("Ben je zeker dat je deze statistiek wilt verwijderen?");
        if (top5verwijderen === true) {
            $("#top5Id").remove()
            $("#verwijderen-top5Id").remove();

        }
    }
</script>




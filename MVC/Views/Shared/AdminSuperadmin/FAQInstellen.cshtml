@model IEnumerable<MVC.Models.Specifieke_Pagina.FAQViewModel>

<h3>FAQ instellen</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Vraag)
        </th>
        <th>
            Verwijderen
        </th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Vraag)
        </td>
        <td>
            <button class="btn btn-primary" onclick="location.href='@Url.Action("VerwijderFAQItem", "Admin", new { vraag = @item.Vraag })'">
                <span>Verwijder</span>
            </button>
        </td>
    </tr>
    }
</table>

<div>
    <h3>Nieuwe vraag:</h3>
    <textarea id="taNieuweVraag"></textarea>
    <br />
    <h3>Antwoord:</h3>
    <textarea id="taAntwoord"></textarea>
    <br />
    <br />
    <button class="btn btn-primary" id="btnVraagToevoegen" onclick="location.href='@Url.Action("VoegFAQItemToe", "Admin", new { NieuweVraag = ViewBag.NieuweVraag, Antwoord = ViewBag.Antwoord })'">
        <span>Toevoegen</span>
    </button>
</div>

<script type="text/javascript">
    $("#btnVraagToevoegen").click(function () {
        ViewBag.NieuweVraag = $("#taNieuweVraag").val();
        ViewBag.Antwoord = $("#taAntwoord").val();
    });
</script>
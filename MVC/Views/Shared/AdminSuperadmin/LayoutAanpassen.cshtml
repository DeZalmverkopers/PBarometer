@model MVC.Models.LayoutViewModel

<h3>Layout aanpassen</h3>

<table class="table">
    <tr>
        <td>
            <label>Kleur achtergrond</label>
        </td>
        <td>
            <input id="colorID" type="color" />
        </td>
    </tr>

    <tr>
        <td>
            <label>Naam onderwerp</label>
        </td>
        <td>
            <input type="text" />
        </td>
    </tr>

    <tr>
        <td>
            <label>Afbeelding startscherm</label>
        </td>
        <td>
            <input type="file" id="myFile" name="myFile" />
        </td>
    </tr>
</table>

<div>
    <button id="btnOpslaan" class="btn btn-primary btn-algemene-layout" onclick="location.href='@Url.Action("SlaAchtergrondOp", "Admin", new { kleur = Model.kleur })'">Opslaan</button>
</div>

<script type="text/javascript">
    $("#colorID").change(function () {
        var clr = $("#colorID").val();
        $("body").css("background-color", clr);
        Model.kleur = clr;
    });
</script>


@model MVC.Models.SettingsNotLoggedInViewModel

@{
  ViewBag.Title = "NietIngelogdeGebruikerInstellen";
}

<h3>Instellingen voor niet-ingelogde gebruikers</h3>

<table class="table">
    <tr>
        <th>
            Zichtbaar?
        </th>
        <th>
            Functie
        </th>
        <th>
            Verander zichtbaarheid
        </th>
    </tr>
    <tr>
        <td>
            @Html.DisplayFor(m => m.OverzichtAdded)
        </td>
        <td>
            @Html.LabelFor(m => m.OverzichtAdded)
        </td>
        <td>
            <button id="btnVeranderOverzichtAdded" class="btn btn-primary" onclick="location.href='@Url.Action("SlaOverzichtAddedOp", "Admin", new { OverzichtAdded = !Model.OverzichtAdded })'">
                <span>Verander</span>
            </button>
        </td>
    </tr>

    <tr>
        <td>
            @Html.DisplayFor(m => m.AlertsAdded)
        </td>
        <td>
            @Html.LabelFor(m => m.AlertsAdded)
        </td>
        <td>
            <button id="btnVeranderAlertsAdded" class="btn btn-primary" onclick="location.href='@Url.Action("SlaAlertsAddedOp", "Admin", new { AlertsAdded = !Model.AlertsAdded })'">
                <span>Verander</span>
            </button>
        </td>
    </tr>
</table>

<script type="text/javascript">
    $("#btnVeranderOverzichtAdded").click(function () {
        ViewBag.OverzichtAdded = !Model.OverzichtAdded;
    });
</script>

<script type="text/javascript">
    $("#btnVeranderAlertsAdded").click(function () {
        ViewBag.AlertsAdded = !Model.AlertsAdded;
    });
</script>